#!/bin/bash


# Check if this script is run using sudo privileges
# Source: https://askubuntu.com/questions/15853/how-can-a-script-check-if-its-being-run-as-root
if [[ $EUID -ne 0 ]]; then
    echo "Please run this script using the sudo command!"
    exit 1

fi



while getopts ":ps:" opt;do # looping though get op to get option (flag) from user
    case $opt in 

    p) 
        ./installpackage # if the flag match p then run the script install package

        ;;
    s)
        ./autoSymbolicLink ${OPTARG} # if the flag match s then run the script autoSymbolicLink and pass the argument
    ;;
    ?) 
        echo flag doesnt exist
        exit 1
        ;;

    esac
done



if [[ -z $1 ]];then
    echo "this script allow you to download package and create symbolic for user"
    echo "Usage sudo main [OPTION]...."
    echo " -p  : download the packages in packagelist file"
    echo " -s <username>  : to set up symbolic for user"
fi
